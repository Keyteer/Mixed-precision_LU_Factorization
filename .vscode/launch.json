{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CUDA Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug_program",
            "args": ["matrix_3x3.txt", "-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/cuda-gdb"
        }
    ]
}